[settings]
screenchange-reload = true

[colors]
color0=${xrdb:color0:#000000}
color1=${xrdb:color1:#000000}
color2=${xrdb:color2:#000000}
color3=${xrdb:color3:#000000}
color4=${xrdb:color4:#000000}
color5=${xrdb:color5:#000000}
color6=${xrdb:color6:#000000}
color7=${xrdb:color7:#000000}
color8=${xrdb:color8:#000000}

background     = ${colors.color0}
background-alt = ${colors.color1}
foreground     = ${colors.color7}
foreground-alt = ${colors.color5}

primary    = ${colors.color6}
secondary  = ${colors.color4}
tertiary   = ${colors.color3}
quaternary = ${colors.color2}

alert = ${xrdb:color8}

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/common]
monitor-strict = true

width = 100%
height = 24

separator = Óò°

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
underline-size = 2

border-left-size = 5
border-right-size = 5

padding-left = 0
padding-right = 1
module-margin = 1

;wm-restack = i3
;override-redirect = true

font-0 = InputSansNarrow Nerd Font:style=Regular:size=10
font-1 = material\-wifi:style=Regular

;tray-background = ${colors.primary}


[bar/full]
inherit = bar/common

monitor = ${env:MONITOR:DP2-1}

border-top-size = 5

modules-left = i3 compton redshift xwindow
modules-center = mpd
modules-right = mail cpu temp mem fs lan wlan vol date

tray-position = right
tray-padding = 5


[bar/top]
inherit = bar/common

monitor = ${env:MONITOR:eDP1}

border-top-size = 5

modules-left = i3 compton redshift
modules-center = xwindow
modules-right = vol bat0 bat1 date

tray-position = right
tray-padding = 2

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[bar/bottom]
inherit = bar/common

monitor = ${env:MONITOR:eDP1}

bottom = true

border-bottom-size = 5

padding-left = 1

modules-left = mpd
modules-center = lan wlan
modules-right = cpu temp mem fs

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/fs]
type = internal/fs
interval = 25

mount-0 = /
;mount-1 = /home

format-mounted-prefix= "ÔáÄ "
format-mounted-prefix-foreground = ${colors.foreground-alt}

label-mounted = %used% / %free%

format-unmounted-prefix= "ÔáÄ "
format-unmounted-prefix-foreground = ${colors.foreground-alt}

label-unmounted = --%
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.foreground-alt}
label-mode-background = ${colors.background}

label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background-alt}
label-focused-overline = ${colors.quaternary}
label-focused-underline = ${colors.quaternary}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = 2

label-urgent = %index%ÔÉß
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-visible = %index%
label-visible-background = ${colors.tertiary}
label-visible-underline = ${colors.secondary}
label-visible-padding = 2}


[module/xbacklight]
type = internal/xbacklight

format = <label>
format-prefix= "ÔÉ´ "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = ${colors.primary}

ramp-0 = üåï
ramp-1 = üåî
ramp-2 = üåì
ramp-3 = üåí
ramp-4 = üåë

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight


[module/vol]
type = internal/volume

format-volume = <label-volume>
format-volume-prefix= "ÔíÖ "
format-volume-prefix-foreground = ${colors.foreground-alt}
;format-volume-underline = ${colors.primary}

label-volume-foreground = ${root.foreground}

format-muted-prefix = "Ôë¶ "
format-muted-foreground = ${colors.foreground-alt}
;format-muted-underline = ${colors.secondary}

label-muted = --


[module/mpd]
type = internal/mpd

format-online = <icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next> Óò° <label-song> Óò° <label-time> Óò° <icon-repeat> <icon-random>
format-playing = ${self.format-online}
format-paused = ${self.format-online}
format-stopped = <icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next> -- <icon-repeat> <icon-random>

;label-song-maxlen = 25
;label-song-ellipsis = true

icon-prev = ÔÅâ
icon-seekb = ÔÅä
icon-stop = ÔÅç
icon-play = ÔÅã
icon-pause = ÔÅå
icon-next = ÔÅê
icon-seekf = ÔÅé

icon-random = ÔÅ¥
icon-repeat = ÔÅπ

toggle-on-foreground = ${colors.foreground}
toggle-off-foreground = ${colors.foreground-alt}


[module/cpu]
type = internal/cpu
interval = 5
format-prefix = "ÔÉ§ "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = ${colors.secondary}
label = %percentage-cores%

[module/mem]
type = internal/memory
interval = 5
format-prefix = "Óâ¶ "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = ${colors.secondary}
label = %gb_used% / %gb_free%

[module/mail]
type = custom/script
interval = 10
format = <label>
format-prefix = "ÔÉ† "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/mail.py

[module/wlan]
type = internal/network

interface = wlp3s0
interval = 5

format-connected = <ramp-signal> <label-connected>
;format-connected-underline = ${colors.tertiary}

label-connected = %essid% %local_ip% %upspeed% %downspeed%


format-disconnected-prefix = "Ôëß "
format-disconnected-prefix-foreground = ${colors.foreground-alt}
;format-disconnected-underline = ${colors.quaternary}

label-disconnected = -.-.-.-
label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = Ó§Ö
ramp-signal-1 = Ó§É
ramp-signal-2 = Ó§Å
ramp-signal-3 = Ó§Ä
ramp-signal-foreground = ${colors.foreground-alt}

[module/lan]
type = internal/network
interface = enp0s25
interval = 5

;format-connected-underline = ${colors.tertiary}
format-connected-prefix = "ÔÉ® "
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-foreground-foreground = ${colors.foreground-alt}

label-connected = %local_ip% %upspeed% %downspeed%

format-disconnected-prefix = "Ôëß "
format-disconnected-prefix-foreground = ${colors.foreground-alt}
;format-disconnected-underline = ${colors.quaternary}
format-disconnected-foreground-foreground = ${colors.foreground-alt}

label-disconnected =  -.-.-.-
label-disconnected-foreground = ${colors.foreground-alt}

[module/bat0]
type = internal/battery

battery = BAT0
adapter = AC
full-at = 95

time-format = %H:%M

format-charging = <animation-charging> <label-charging>
;format-charging-underline = ${colors.quaternary}
label-charging = %percentage%% (%time%)

animation-charging-0 = ÔâÉ
animation-charging-1 = ÔâÇ
animation-charging-2 = ÔâÅ
animation-charging-3 = ÔâÄ
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

format-discharging = <ramp-capacity> <label-discharging>
;format-discharging-underline = ${self.format-charging-underline}
label-discharging = %percentage%% (%time%)

ramp-capacity-0 = ÔâÑ
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ
ramp-capacity-foreground = ${colors.foreground-alt}

format-full-prefix = "Ôá¶ "
format-full-prefix-foreground = ${colors.foreground-alt}
;format-full-underline = ${self.format-charging-underline}i

label-full = %percentage%% 


[module/bat1]
inherit = module/bat0

battery = BAT1


[module/temp]
type = internal/temperature
thermal-zone = 0

warn-temperature = 60

format = <ramp> <label>
;format-underline = ${colors.secondary}
format-warn = <ramp> <label-warn>
format-warn-underline = ${colors.alert}

label = %temperature%
label-warn = %temperature%!
label-warn-foreground = ${colors.alert}
;label-warn-background = ${colors.background-alt}

ramp-0 = Ôãã
ramp-1 = Ôãä
ramp-2 = Ôãâ
ramp-3 = Ôãà
ramp-4 = Ôãá
ramp-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"
date-alt = "%a, %d. %b, %Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = "Ôê∫ "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = ${colors.quaternary}

label = %date% %time%

[module/compton]
type = custom/script
interval = 5

exec = ~/.config/polybar/compton.sh
click-left = ~/.config/polybar/compton-toggle.sh

[module/redshift]
type = custom/script
interval = 5

exec = ~/.config/polybar/redshift.sh
click-left = ~/.config/polybar/redshift-toggle.sh

